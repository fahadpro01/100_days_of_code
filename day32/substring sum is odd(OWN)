#include <iostream>
using namespace std;

int main() {
  int i,j,n;
  cin>>n;
  int a[n];

  int count =0;
  for(i=0;i<n;i++){
    cin>>a[i];
  }
  for(i=0;i<=n-1;i++){
    int odd=0;
    for(j=i;j<=n-1;j++){
       odd+=a[j];
      if(odd%2 !=0)
      count++;
      }
    }
      
        cout<<count<<endl;
      
  }
