void sort012(int a[], int n)
{
   int count1=0,count2=0,count3=0;
   int i,j;
   for(i=0;i<n;i++){
     if(a[i]==0)
        count1++;
        else if(a[i]==1)
        count2++;
        else
        count3++;
   }
        
        for(j=0;j<count1;j++)
            a[j]=0;
             for(j=count1;j<count1+count2;j++)
            a[j]=1;
             for(j=count1+count2;j<n;j++)
            a[j]=2;
            
   
}
